<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/current_user_text_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:text="Loading..."/>

    <Button
        android:id="@+id/single_player_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/menu_button_style"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:text="@string/single_player_mode_button"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/statistics_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="110dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/menu_button_style"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:text="@string/statistics_button"/>

        <Button
            android:id="@+id/best_players_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/statistics_button"
            android:textColor="@android:color/white"
            android:background="@drawable/menu_button_style"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:text="@string/best_players_button"/>

        <Button
            android:id="@+id/news_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="110dp"
            android:layout_gravity="center"
            android:layout_below="@+id/statistics_button"
            android:textColor="@android:color/white"
            android:background="@drawable/menu_button_style"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:text="Read News"/>

        <Button
            android:id="@+id/exit_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_below="@+id/best_players_button"
            android:layout_toRightOf="@+id/statistics_button"
            android:textColor="@android:color/white"
            android:background="@drawable/menu_button_style"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:text="Exit"/>

    </RelativeLayout>


</LinearLayout>