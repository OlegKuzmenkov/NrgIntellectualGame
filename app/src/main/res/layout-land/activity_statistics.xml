<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/statistics_style"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/percent_right_answers_indicator"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/percent_text_view_style"
            android:orientation="vertical">

            <TextView
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="25dp"
                android:text="Percent of right answers"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/percent_right_answers_text_view"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:gravity="top|center_horizontal"
                android:text="41,3"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="52dp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/id_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:text="32"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/percent_right_answers_indicator"
            android:textSize="26dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/login_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="32"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_below="@+id/id_text_view"
            android:layout_toRightOf="@+id/percent_right_answers_indicator"
            android:textSize="26dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/count_answers_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="32"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_below="@+id/login_text_view"
            android:layout_toRightOf="@+id/percent_right_answers_indicator"
            android:textSize="26dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/count_right_answers_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="32"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_below="@+id/count_answers_text_view"
            android:layout_toRightOf="@+id/percent_right_answers_indicator"
            android:textSize="26dp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <Button
        android:id="@+id/go_to_main_menu_button"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:background="@drawable/answer_button_style"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold|italic"
        android:textSize="22dp"
        android:textAllCaps="false"
        android:text="@string/go_to_main_menu_button"/>

</LinearLayout>